HADOOP_ENABLED=<%= @hadoop_enabled %>
SOLR_ENABLED=<%= @solr_enabled %>
SPARK_ENABLED=<%= @spark_enabled %>
CFS_ENABLED=<%= @cfs_enabled %>

# Install root
