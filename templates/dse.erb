    DSE_HOME=/usr/share/dse
fi

OUTPUT_FILE="/var/log/cassandra/output.log"
CONFDIR=/etc/dse/cassandra
PIDFILE=/var/run/$NAME/$NAME.pid

CASSANDRA_USER=cassandra
CASSANDRA_GROUP=cassandra

SPARK_CONF_DIR=/etc/dse/spark
